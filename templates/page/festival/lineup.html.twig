<div class="card card-dash border-base-content bg-base-100" id="date-{{ id|default('') }}">
    <div class="card-body indicator w-full">
        <span class="indicator-item badge badge-primary indicator-center border-base-100 font-expanded text-base">
            {% block date %}{% endblock %}
        </span>
        <span class="indicator-item badge badge-primary indicator-middle indicator-start rotate-[-90deg] border-base-100 font-expanded text-base">
            {% block time %}{% endblock %}
        </span>
        <span class="indicator-item badge badge-primary indicator-middle indicator-end rotate-[90deg] border-base-100 font-expanded text-base">
            {% block paf %}{% endblock %}
        </span>
        <div class="drawer drawer-end">
            <input id="lineup-{{ id|default('') }}" type="checkbox" class="drawer-toggle" />
            <div class="drawer-content">
                <div class="space-y-4">
                    {% block content %}{% endblock %}
                </div>
            </div>
            <div class="drawer-side">
                <label for="lineup-{{ id|default('') }}" aria-label="close sidebar" class="drawer-overlay"></label>
                <div class="bg-base-100 text-base-content min-h-full w-4/5 lg:w-4/7 p-4">
                    <turbo-frame id="detail-{{ id|default('') }}">
                        {% include 'page/festival/lineup/' ~ slug|default('') ~ '.html.twig' ignore missing %}
                    </turbo-frame>
                </div>
            </div>
        </div>
    </div>
</div>
